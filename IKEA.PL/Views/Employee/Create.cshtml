@model EmployeeVM

@{
    ViewData["Title"] = "Create Employee";
}

<div class="row justify-content-center align-content-center flex-column">
    <h1 class="col-6 my-4">Create New Employee</h1>
    <form asp-action="Create" method="post" class="row col-6">
        @*Partial view*@
        <partial name="Partials/_CreateEditPartial" model="@Model" />

        @*Buttons*@
        <div class="mt-4">
            <input type="submit" value="Create" class="btn btn-primary" /> ||
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
    </form>
</div>

@section ValidateScripts
{
    <partial name="_ValidationScriptsPartial" />
}