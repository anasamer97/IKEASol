@model EmployeeVM

@{
    ViewData["Title"] = "Create Employee";
}

<div class="row justify-content-center align-content-center flex-column">

    <h1 class="col-6 my-4">Edit Employee @Model.Name.</h1>
    <form asp-action="Edit" method="post" class="row col-6">
        <partial name="Partials/_CreateEditPartial" model="Model" />


        <div class="mt-4">
            <input type="submit" value="Update" class="btn btn-success" /> ||
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
    </form>

</div>
@section ValidateScripts
{
    <partial name="_ValidationScriptsPartial" />
}